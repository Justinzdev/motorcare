<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/notiTitle"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:text="Case Title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notiDescription"
        android:layout_width="186dp"
        android:layout_height="25dp"
        android:layout_below="@+id/notiTitle"
        android:layout_alignStart="@+id/notiTitle"
        android:layout_alignEnd="@+id/notiTitle"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="-72dp"
        android:text="Case Description"
        android:textSize="14sp" />

</RelativeLayout>
