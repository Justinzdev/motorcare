<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/list_item.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/workingTitle"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/confirmButton"
        android:text="Case Title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/workingDescription"
        android:layout_width="186dp"
        android:layout_height="25dp"
        android:layout_below="@+id/workingTitle"
        android:layout_alignStart="@+id/workingTitle"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/confirmButton"
        android:text="Case Description"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/workingUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workingDescription"
        android:layout_alignStart="@+id/workingDescription"
        android:layout_alignEnd="@+id/workingDescription"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-1dp"
        android:text="Working Username"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/workingPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workingDescription"
        android:layout_alignStart="@+id/workingUsername"
        android:layout_alignEnd="@+id/workingDescription"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="0dp"
        android:text="Working Phone"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/workingLat"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@+id/workingPhone"
        android:layout_alignStart="@+id/workingPhone"
        android:layout_alignEnd="@+id/workingUsername"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="151dp"
        android:text="Working Lat"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/workingLng"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_alignStart="@+id/workingUsername"
        android:layout_alignTop="@+id/workingLat"
        android:layout_alignEnd="@+id/workingPhone"
        android:layout_alignBottom="@+id/workingLat"
        android:layout_marginStart="120dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="1dp"
        android:text="Working Lng"
        android:textSize="10sp" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="14dp"
        android:backgroundTint="#4CAF50"
        android:text="ยืนยัน"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/confirmButton"
        android:layout_alignStart="@+id/confirmButton"
        android:layout_alignEnd="@+id/confirmButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="#F44336"
        android:text="ยกเลิก"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

</RelativeLayout>
